<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@drawable/none_radius_border"
            android:rowCount="2" android:columnCount="4">
    <ScrollView android:layout_width="match_parent" android:layout_height="350dp"
                android:layout_row="0" android:layout_column="0"
                android:layout_columnSpan="4" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                android:paddingTop="30dp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/log" android:textSize="@dimen/regularFontSize"
                  android:scrollbars="none"/>
    </ScrollView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/clear" android:layout_row="0" android:layout_column="3"
              android:text="@string/clear" android:layout_gravity="end" android:layout_marginTop="10dp"
              android:layout_marginEnd="10dp" android:textColor="@color/gray"
              android:textSize="@dimen/minorFontSize"/>
    <Spinner android:layout_width="165dp" android:layout_height="50dp" android:id="@+id/command"
             android:layout_row="1" android:layout_column="0" android:background="@drawable/none_radius_border"/>
    <Spinner android:layout_width="165dp" android:layout_height="50dp" android:id="@+id/param"
             android:layout_row="1" android:layout_column="1" android:background="@drawable/none_radius_border"/>
    <Spinner android:layout_width="165dp" android:layout_height="50dp" android:id="@+id/secondParam"
             android:layout_row="1" android:layout_column="2" android:background="@drawable/none_radius_border"/>
    <Button android:layout_width="165dp" android:layout_height="50dp" android:id="@+id/enter"
              android:layout_row="1" android:layout_column="3" android:text="@string/send"
              android:gravity="center" android:textSize="@dimen/regularFontSize"
              android:textColor="@color/white" android:background="@drawable/button"
              android:layout_gravity="center" android:focusableInTouchMode="true"/>

</GridLayout>
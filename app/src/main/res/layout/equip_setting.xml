<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"  tools:ignore="PxUsage">
    <FrameLayout android:layout_width="match_parent" android:layout_height="135px"
                 android:background="@color/colorPrimary" android:layout_marginBottom="20dp">
        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@drawable/back" android:layout_gravity="start|center_vertical"
                   android:layout_marginStart="60dp" android:id="@+id/back"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:text="@string/equip_setting" android:layout_gravity="center"
                  android:gravity="center" android:textColor="@color/white" android:textSize="@dimen/macroFontSize"/>
    </FrameLayout>
    <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:columnCount="4" android:rowCount="2"
                android:paddingStart="50dp" android:paddingEnd="50dp">
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_1" android:layout_column="0" android:layout_row="0"
                     android:layout_margin="25dp"/>
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_2" android:layout_column="1" android:layout_row="0"
                     android:layout_margin="25dp"/>
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_3" android:layout_column="2" android:layout_row="0"
                     android:layout_margin="25dp"/>
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_4" android:layout_column="3" android:layout_row="0"
                     android:layout_margin="25dp"/>
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_5" android:layout_column="0" android:layout_row="1"
                     android:layout_margin="25dp"/>
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_6" android:layout_column="1" android:layout_row="1"
                     android:layout_margin="25dp"/>
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_7" android:layout_column="2" android:layout_row="1"
                     android:layout_margin="25dp"/>
        <FrameLayout android:layout_width="400dp" android:layout_height="410dp"
                     android:id="@+id/equip_8" android:layout_column="3" android:layout_row="1"
                     android:layout_margin="25dp"/>
    </GridLayout>
</LinearLayout>
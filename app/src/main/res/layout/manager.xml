<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="match_parent"
              tools:ignore="PxUsage">
    <LinearLayout android:layout_width="match_parent" android:layout_height="135px"
                  android:background="@color/colorPrimary" android:layout_marginBottom="40dp">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:text="@string/backstage" android:layout_gravity="center"
                  android:gravity="center" android:textColor="@color/white"
                  android:textSize="@dimen/macroFontSize"/>
    </LinearLayout>
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:scrollbars="none">
        <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:rowCount="3" android:columnCount="3" android:id="@+id/root">
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="0"
                          android:layout_row="0" android:background="@drawable/border"
                          android:id="@+id/adjust" android:layout_marginBottom="75dp"
                          android:layout_marginStart="150dp" android:layout_marginEnd="200dp"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/adjust" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/serialPortTest" android:layout_gravity="center_vertical|end"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="1"
                          android:layout_row="0" android:background="@drawable/border"
                          android:layout_marginBottom="75dp" android:id="@+id/restore"
                          android:layout_marginEnd="200dp"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/restore" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/restore" android:layout_gravity="center_vertical|end"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="2"
                          android:layout_row="0" android:background="@drawable/border"
                          android:layout_marginBottom="75dp" android:id="@+id/upload"
                          android:layout_marginEnd="200dp"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/upload" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/upload" android:layout_gravity="center"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="0"
                          android:layout_row="1" android:background="@drawable/border"
                          android:id="@+id/equip_setting"
                          android:layout_marginStart="150dp" android:layout_marginBottom="75dp"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/equip_setting" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/equip_setting" android:layout_gravity="center_vertical|end"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="1"
                          android:layout_row="1" android:background="@drawable/border"
                          android:layout_marginBottom="75dp" android:id="@+id/upgrade"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/upgrade" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/upgrade" android:layout_gravity="center"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="2"
                          android:layout_row="1" android:background="@drawable/border"
                          android:layout_marginBottom="75dp" android:id="@+id/reboot"
                          android:layout_marginEnd="200dp"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/reboot" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/reboot" android:layout_gravity="center"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="0"
                          android:layout_row="2" android:background="@drawable/border"
                          android:layout_marginBottom="75dp" android:id="@+id/resources"
                          android:layout_marginStart="150dp"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/resources" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/resources" android:layout_gravity="center"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="600dp" android:layout_height="200dp"
                          android:orientation="horizontal" android:layout_column="1"
                          android:layout_row="2" android:background="@drawable/border"
                          android:layout_marginEnd="200dp"
                          android:layout_marginBottom="75dp" android:id="@+id/exit"
                          android:paddingStart="50dp" android:paddingEnd="50dp">
                <ImageView android:layout_width="65dp" android:layout_height="65dp"
                           android:src="@drawable/exit" android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/exit" android:layout_gravity="center_vertical|end"
                          android:textSize="@dimen/bigFontSize" android:textColor="@color/colorPrimary"
                          android:layout_marginStart="200dp"/>
            </LinearLayout>
        </GridLayout>
    </HorizontalScrollView>
</LinearLayout>